    "@mate-academy/stylelint-config": "0.0.9",
    "concurrently": "^5.2.0",
    "eslint": "^7.3.1",
    "eslint-plugin-jest": "^23.17.1",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "node-sass": "^4.14.1",
    "parcel": "^1.12.4",
    "sass": "^1.26.10",
